{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": "./src",
    "noImplicitAny": false,
    "incremental": true,
    "rootDirs": [
      "src",
    ]
  },
  "include": [
    "src/**/*",
    "protoes/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}